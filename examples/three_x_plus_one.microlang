#get seed number and show it
make str y = input 'Give Number here: '
make int x = int [ y ]
display x
#start count at zero 
make int count = 0
#main while loop
while ( x > 1 ) do
{
    make int d_by_two = x % 2
    if ( d_by_two == 0 ) then
    {
        x = 0.5 * x
    }
    else
    {
        x = 1 + ( 3 * x )
    }
    display x
    count = 1 + count
}
#display stopping time
display 'Stopping time: '
display count