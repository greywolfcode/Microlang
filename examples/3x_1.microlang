#get seed number and show it
make str y = input 'Give Number here: '
make flt x = flt [ y ]
display x
#start count at zero 
make flt count = 0
#main while loop
while x > 1 do
{
    make flt d_by_two = x % 2
    if d_by_two == 0 then
    {
        x = x / 2
    }
    else
    {
        x = ( 3 * x ) + 1
    }
    display x
    count = count + 1
}
#display stopping time
display 'Stopping time: '
display count